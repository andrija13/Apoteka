@page
@model LoginModel

@{
    ViewData["Title"] = "Prijavi se";
}
<link rel="stylesheet" href="~/css/Login.css">

<div class="row login-panel">
    <div class="col-md-4">
        <h4>Prijavi se</h4>
        <section>
            <form id="account" method="post">
                <div asp-validation-summary="All" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Input.Email"></label>
                    <input asp-for="Input.Email" class="form-control" />
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Input.Password"></label>
                    <input asp-for="Input.Password" class="form-control" />
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>
                <div class="form-group dodaj">
                    <button type="submit" class="btn btn-success">Prijavi se</button>
                </div>
                <div class="form-group" style="text-align: center;font-size: 12px;">
                    <p>
                        <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">Nemate nalog? Registrujte se!</a>
                    </p>
                </div>
            </form>
        </section>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
